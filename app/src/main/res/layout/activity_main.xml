<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarMain"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/toolBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Открытый доступ."
        app:titleTextColor="@color/material_dynamic_tertiary40"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cameraPermissionBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запрос на разрешение камеры"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/contactsPermissionBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запрос на разрешение контактов"
        android:layout_marginTop="20dp"/>

</LinearLayout>